#include <iostream>
using namespace std;

template<typename T>

int linearSearch(const T list[], T key, int arraySize)
{
	for (int i = 0; i < arraySize; i++)
	{
		if (key == list[i])
			return i;
	}
	return -1; //returns -1 if fails
}

int main()
{
	int iArray[5] = { 23, 1, 53, 14, 90 };
	cout << linearSearch(iArray, 14, 5) << endl;

	double dArray[5] = { 9.2, 2.43, -6.4, 5.72, 5.41 };
	cout << linearSearch(dArray, 2.40, 5) << endl;

	string sArray[5] = { "Home", "Jesus", "Stingray", "Whitworth", "Mom" };
	cout << linearSearch(sArray, string("Stingray"), 5) << endl;

	return 0;
}
