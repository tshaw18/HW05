#include <iostream>
using namespace std;

template<typename T>
bool isSorted(const T list[], int size){
	for (int i = 1; i < size; i++){
		if (list[i] < list[i - 1]){
			return false;
			break;
		}
	}
	return true;
}

int main() {

	int iArray[5] = { 1, 4, 78, 100, 234 };
	cout << "Array sorted? ";
	if (isSorted(iArray, 5) == true)
		cout << "Yes\n";
	else cout << "No\n";

	double dArray[5] = { -8.4, 3.2, 4.23, 4.234, 7.9 };
	cout << "Array sorted? ";
	if (isSorted(dArray, 5) == true)
		cout << "Yes\n";
	else cout << "No\n";

	string sArray[5] = { "Apple", "iMac", "iWatch", "iPhone", "Jesus" };
	cout << "Array sorted? ";
	if (isSorted(sArray, 5) == true)
		cout << "Yes\n";
	else cout << "No\n";
}
